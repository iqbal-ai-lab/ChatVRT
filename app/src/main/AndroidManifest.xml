<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

  <uses-permission android:name="android.permission.RECORD_AUDIO" />
  <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
  <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MICROPHONE" />
  <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
  <uses-permission android:name="android.permission.WAKE_LOCK" />
  <!-- for flashlight -->
  <uses-permission android:name="android.permission.CAMERA" />

  <!-- Package visibility for intents -->
  <queries>
    <package android:name="com.google.android.youtube" />
    <package android:name="com.android.chrome" />
    <package android:name="com.whatsapp" />
  </queries>

  <application
    android:allowBackup="true"
    android:label="ChatVRT"
    android:icon="@mipmap/ic_launcher"
    android:supportsRtl="true"
    android:theme="@style/Theme.ChatVRT">

    <service
      android:name=".hotword.HotwordForegroundService"
      android:exported="false"
      android:foregroundServiceType="microphone" />

    <service
      android:name=".overlay.OverlayAssistantService"
      android:exported="false" />

    <activity android:name=".VoiceCommandActivity"
      android:exported="true"
      android:launchMode="singleTop" />

    <activity android:name=".MainActivity"
      android:exported="true">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
  </application>
</manifest>